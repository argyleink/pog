#!/usr/bin/env node


// MODULE DENEPDENCIES
var mkdirp = require('mkdirp'),
    ncp = require('ncp').ncp,
    colors = require('colors'),
    program = require('commander'),
    pkg = require('../package.json'),
    version = pkg.version,
    exec = require('child_process').exec,
    spawn = require('child_process').spawn,
    child,
    os = require('os'),
    fs = require('fs');


// CLI
program
  .version(version)
  .usage('[options] [dir]')
  // .option('-s, --sessions', 'add session support')
  .option('-e, --ejs', 'add ejs engine support (defaults to jade)')
  .option('--nib', 'add nib support to stylus')
  .option('--axis', 'add axis support to stylus')
  .option('-J, --jshtml', 'add jshtml engine support (defaults to jade)')
  .option('-H, --hogan', 'add hogan.js engine support')
  .option('-c, --css <engine>', 'add stylesheet <engine> support (less|stylus) (defaults to plain css)')
  .option('-f, --force', 'force on non-empty directory')
  .option('start', 'start the web server (still a bit buggy, best just just run "grunt" for now)')
  .option('generate', 'generate new model + controller with basic CRUD functionality')
  .parse(process.argv);


// PATH
var path = program.args.shift() || '.';

// end-of-line code
var eol = os.EOL

// Template engine
program.template = 'jade';
if (program.ejs) program.template = 'ejs';
if (program.jshtml) program.template = 'jshtml';
if (program.hogan) program.template = 'hjs';


// GENERATE A NEW MODEL/CONTROLLER PAIR
if (program.generate) {

    var name = path,
        pkgFile = './package.json';
        fileContent = fs.readFileSync(pkgFile),
        pkg = JSON.parse(fileContent),
        appName = pkg.name,
        templates = './lib/templates/';
        modelDir = './app/models/';
        controllerDir = './app/controllers/';
        model = templates + 'model/template.js';

    // UPDATE MODEL
    fs.readFile( templates + 'model.js' , function (err, data) {

        if (err) {
            console.log(err);
        } else {
            data = data.toString();
            data = data.replace(new RegExp('{model}', 'g'), name);
            fs.writeFileSync(modelDir + name + '.js', data);
        }

    });


    // UPDATE CONTROLLER
    fs.readFile( templates + 'controller.js' , function (err, data) {

        if (err) {
            console.log(err);
        } else {

            data = data.toString();
            data = data.replace(new RegExp('{model}', 'g'), name);

            fs.writeFileSync(controllerDir + name + 'Controller.js', data);
        }

    });


    return false;

} // END GENERATE


if (program.start) {


    spawn('grunt').stdout.on('data', function (data) {
      console.log('' + data);
    });


    // // console.log(__dirname);

    // var app = {
    //     site : '',
    //     config: ''
    // };
    // // var app.site = {};
    // // var app.config = {};
    // // var config = require('../app/config/config.js')(app);

    // fileContent = fs.readFileSync('../app/config/config.js');
    // // pkg = JSON.parse(fileContent);

    // console.log(fileContent);

    return false;
}

// Generate application

(function createApplication(path) {
    emptyDirectory(path, function(empty){
        if (empty || program.force) {
            createApplicationAt(path);
        } else {
            console.log();
            program.confirm('destination is not empty, continue? ', function(ok){
                if (ok) {
                    process.stdin.destroy();
                    createApplicationAt(path);
                } else {
                    abort('aborting');
                }
            });
        }
    });
})(path);

function cleanup() {


}


// REMOVE A DIRECTORY
function rmdir(path) {
  if( fs.existsSync(path) ) {
    fs.readdirSync(path).forEach(function(file,index){
      var curPath = path + "/" + file;
      if(fs.statSync(curPath).isDirectory()) { // recurse
        rmdir(curPath);
      } else { // delete file
        fs.unlinkSync(curPath);
      }
    });
    fs.rmdirSync(path);
  }
};



// NEEDS SOME UPDATE TO WORK WITH DYNAMIC ENGINES
function createApplicationAt(path) {

    console.log();
    process.on('exit', function(){

        // CLEANUP UNUSED FOLDERS

        ncp(__dirname + '/_src/app/_templates', path + '_lib', function (err) {
            rmdir(path + '/app/_templates');
        });

        fs.unlink(path + '/.git');

        // LET USER KNOW WE'RE DONE
        console.log();
        console.log('   install dependencies:');
        console.log('     $ cd %s && npm install', path);
        console.log();
        console.log('   run the app:');
        console.log('     $ grunt');
        console.log();
    });

    mkdir(path, function(){

        ncp(__dirname + '/_src', path, function (err) {

            // HANDLE ERRORS
            if (err) {
                return console.error(err);
            }

            // UPDATE PACKAGE FILE
            var pkgFile = path + '/package.json',
                fileContent = fs.readFileSync(pkgFile),
                pkg = JSON.parse(fileContent);

            pkg.name = path;

            // OPEN CONFIG FILE
            var cfgFile = path + '/config/config.js';

            fs.readFile( cfgFile, function (err, data) {

                if (err) {
                    return console.error(err);
                }

                data = data.toString();

                // UPDATE APP NAME
                data = data.replace(new RegExp('tesla.js', 'g'), path);

                // SET CSS ENGINE
                switch (program.css) {
                    case 'sass':
                        pkg.dependencies.sass = 'latest';
                        data = data.replace(new RegExp('css: "stylus"', 'g'), 'css: "sass"');
                        break;
                    case 'less':
                        pkg.dependencies.less = 'latest';
                        data = data.replace(new RegExp('css: "stylus"', 'g'), 'css: "less"');
                        break;
                    case 'stylus':
                        pkg.dependencies.stylus = 'latest';

                        if (program.nib) {
                            pkg.dependencies.nib = "latest";
                            data = data.replace(new RegExp('cssLibrary: false', 'g'), 'cssLibrary: "nib"');
                        } else if (program.axis) {
                            pkg.dependencies['axis-css'] = "latest";
                            data = data.replace(new RegExp('cssLibrary: false', 'g'), 'cssLibrary: "axis"');
                        }

                        break;
                    default:
                }


                // SET TEMPLATING ENGINE
                switch (program.template) {
                    case 'ejs':
                        pkg.dependencies.ejs = 'latest';
                        data = data.replace(new RegExp('html: "jade"', 'g'), 'html: "ejs"');
                        rmdir(path + '/app/views');
                        ncp(__dirname + '/_src/app/_templates/views/ejs', path + '/app/views/', function (err) {
                            if (err) return console.error(err); // HANDLE ERRORS
                            // fs.renameSync(path + '/app/ejs', path + '/app/views');
                        });
                        break;
                    case 'jade':
                        pkg.dependencies.jade = 'latest';
                        break;
                    case 'jshtml':
                        pkg.dependencies['jshtml-express'] = 'latest';
                        data = data.replace(new RegExp('html: "jade"', 'g'), 'html: "jshtml"');
                        rmdir(path + '/app/views');
                        ncp(__dirname + '/_src/app/_templates/views/jshtml', path + '/app/views/', function (err) {
                            if (err) return console.error(err); // HANDLE ERRORS
                        });
                        break;
                    case 'hjs':
                        pkg.dependencies['express-hogan'] = 'latest';
                        data = data.replace(new RegExp('html: "jade"', 'g'), 'html: "hjs"');
                        rmdir(path + '/app/views');
                        ncp(__dirname + '/_src/app/_templates/views/hjs', path + '/app/views/', function (err) {
                            if (err) return console.error(err); // HANDLE ERRORS
                        });
                        break;
                    default:

                }

                fs.writeFileSync(cfgFile, data); // WRITE CONFIG FILE
                fs.writeFileSync(pkgFile, JSON.stringify(pkg, null, 4)); // WRITE PACKAGE FILE

            });

            // REMOVE UNNEEDED FILES

        });
    });
}

/**
 * Check if the given directory `path` is empty.
 *
 * @param {String} path
 * @param {Function} fn
 */

function emptyDirectory(path, fn) {
  fs.readdir(path, function(err, files){
    if (err && 'ENOENT' != err.code) throw err;
    fn(!files || !files.length);
  });
}


/**
 * echo str > path.
 *
 * @param {String} path
 * @param {String} str
 */

function write(path, str) {
  fs.writeFile(path, str);
  console.log('   \x1b[36mcreate\x1b[0m : ' + path);
}


/**
 * Mkdir -p.
 *
 * @param {String} path
 * @param {Function} fn
 */

function mkdir(path, fn) {
  mkdirp(path, 0755, function(err){
    if (err) throw err;
    console.log('   \033[36mcreate\033[0m : ' + path);
    fn && fn();
  });
}


/**
 * Exit with the given `str`.
 *
 * @param {String} str
 */

function abort(str) {
  console.error(str);
  process.exit(1);
}